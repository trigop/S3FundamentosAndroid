<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.tamareo.s3fundamentosandroid.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/marciano2"

    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/marginBottonTitle"
        android:layout_marginTop="@dimen/marginTopTitle"
        android:text="@string/title"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/textSizeTitle" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_btn"
        android:layout_gravity="center"
        android:background="@drawable/botton"
        android:theme="@style/miBoton"
        />


</LinearLayout>
